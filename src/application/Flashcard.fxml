<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox maxWidth="-Infinity" prefHeight="640.0" prefWidth="1024.0" style="-fx-background-color: D9D9D9;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.FlashcardController">

    <!-- Top Control Bar -->
    <HBox>
        <Button text="X" HBox.hgrow="NEVER" onAction="#closeWindow" />
        <Pane HBox.hgrow="ALWAYS" /> <!-- Spacer -->
        <Label fx:id="setLabel" HBox.hgrow="NEVER" />
        <Pane HBox.hgrow="ALWAYS" /> <!-- Spacer -->
    </HBox>

    <!-- Content Area -->
    <VBox>
        <padding>
            <Insets top="20" right="20" bottom="20" left="20" />
        </padding>
        <Label fx:id="questionLabel" wrapText="true" VBox.vgrow="ALWAYS"/>
    </VBox>

    <!-- Bottom Area with Navigation and Keyword -->
    <HBox>
        <Button text="&lt;" HBox.hgrow="NEVER" onAction="#handlePrevAction" />
        <Pane HBox.hgrow="ALWAYS" /> <!-- Spacer -->
        <Label fx:id="answerLabel" HBox.hgrow="NEVER" />
        <Pane HBox.hgrow="ALWAYS" /> <!-- Spacer -->
        <Button text="&gt;" HBox.hgrow="NEVER" onAction="#handleNextAction" />
    </HBox>

</VBox>
