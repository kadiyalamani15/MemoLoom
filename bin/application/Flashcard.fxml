<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.CheckBox?>

<VBox maxWidth="-Infinity" prefHeight="640.0" prefWidth="1024.0"
	style="-fx-background-color: D9D9D9;"
	xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.FlashcardController">

	<!-- Top Control Bar -->
	<HBox style=" -fx-padding: 20 32 32 20;">
		<Button text="X" HBox.hgrow="NEVER" onAction="#closeWindow" />
		<Pane HBox.hgrow="ALWAYS" /> <!-- Spacer -->
		<Label fx:id="setLabel" HBox.hgrow="NEVER"
			style="-fx-font-family:'Inter'; -fx-font-size:24;" />
		<Pane HBox.hgrow="ALWAYS" /> <!-- Spacer -->
	</HBox>

	<!-- Content Area -->
	<VBox>
		<padding>
			<Insets top="20" right="20" bottom="20" left="20" />
		</padding>
		<!-- <Label fx:id="questionLabel" wrapText="true" VBox.vgrow="ALWAYS"/> -->
		<TextArea fx:id="questionTextArea" wrapText="true"
			editable="false" prefWidth="1000" prefHeight="200"
			focusTraversable="false"
			style="-fx-font-family:'Inter'; -fx-font-size: 16; -fx-text-alignment: center; -fx-alignment: center;">
			<contextMenu>
				<ContextMenu>
					<items>
						<MenuItem text="Edit" onAction="#editQuestion" />
						<MenuItem text="Delete" onAction="#deleteQuestion"/>
					</items>
				</ContextMenu>
			</contextMenu>
			<VBox.margin>
				<Insets top="20" right="20" bottom="0" left="20" />
			</VBox.margin>
		</TextArea>


	</VBox>

	<!-- Bottom Area with Navigation and Keyword -->
	<HBox alignment="CENTER">
		<Button text="&lt;" HBox.hgrow="NEVER"
			onAction="#handlePrevAction" />
		<Pane HBox.hgrow="ALWAYS" />

		<VBox alignment="CENTER">
			<Label fx:id="answerLabel" HBox.hgrow="NEVER"
				style="-fx-font-family: 'Inter'; -fx-font-size: 20;" >
			<contextMenu>
				<ContextMenu>
					<items>
						<MenuItem text="Edit" onAction="#editAnswer" />
					</items>
				</ContextMenu>
			</contextMenu>
			</Label>
			<CheckBox fx:id="statusCheckBox" text="Bookmark" alignment="CENTER"
				style="-fx-font-family: 'Inter'; -fx-font-size: 16;"
				onAction="#handleBookmark" />
		</VBox>
		<Pane HBox.hgrow="ALWAYS" />

		<Button text="&gt;" HBox.hgrow="NEVER"
			onAction="#handleNextAction" />
	</HBox>

</VBox>
